<div class="grid-row grid-gap">
  <div class="grid-col-3">
    <div class="box">
      <%= @grantee.name %>
      <ul class="usa-list usa-list--unstyled">
        <% @grantee.grants.each do |grant| %>
          <li><%= grant.number %></li>
        <% end %>
      </ul>
    </div>
    <div class="box">
      <p class="ipsum">
        Grantee staff<br/>
        Contact info
      </p>
    </div>
    <div class="box">
      <p class="ipsum">
        OHS - Regional TTA<br/>
        Contact info
      </p>
    </div>
  </div>
  <div class="grid-col-9">
    <div class="box">
      <p class="ipsum">
        Report filters
      </p>
    </div>

    <% list_activity_reports(@grantee).each do |ar| %>
      <div class="box">
        <p><strong><%= ar.activity_id %></strong> <%= ar.purpose %></p>
        <p><%= ar.start_date %> <%= ar.duration %> hours</p>
        <p><%= ar.topic_list.join ", " %></p>
        <p><%= ar.specialists.join ", " %></p>
        <p><%= link_to "View Report", ar, class: "usa-button" %></p>
      </div>
    <% end %>
  </div>
</div>
